<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Label for Test Environment -->
    <TextView
        android:id="@+id/label_test_environment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Test Environment"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Test Environment Spinner -->
    <Spinner
        android:id="@+id/spinner_test_environment"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:spinnerMode="dropdown"
        android:prompt="@string/select_job_prompt"        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_test_environment" />

    <!-- GridLayout for additional controls -->
    <GridLayout
        android:id="@+id/grid_layout_extra_spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:columnCount="2"
        android:rowCount="6"
        android:orientation="horizontal"
        android:alignmentMode="alignMargins"
        android:padding="16dp"
        android:rowOrderPreserved="false"
        app:layout_constraintTop_toBottomOf="@id/spinner_test_environment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Column 1 -->
        <!-- Select Test Profile -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Test Profile"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_test_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1"
            android:spinnerMode="dropdown" />

        <!-- Select App Server -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select App Server"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/spinner_app_server"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Select App Server"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1" />

        <!-- Include Tags -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Tags"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_include_tags"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1"
            android:spinnerMode="dropdown" />

        <!-- Select Validation Template -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Validation Template"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_validation_template"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1"
            android:spinnerMode="dropdown" />

        <!-- Column 2 -->
        <!-- Select UE Profile -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select UE Profile"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_ue_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1"
            android:spinnerMode="dropdown" />

        <!-- Use Case -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Case"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/spinner_use_case"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Select Use Case"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1" />

        <!-- Exclude Tags -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exclude Tags"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_exclude_tags"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1"
            android:spinnerMode="dropdown" />

        <!-- Test Suites -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Suites"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/spinner_test_suites"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Select Test Suites"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1" />

        <!-- Test Cases -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Cases"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/spinner_test_cases"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Select Test Cases"
            android:layout_marginBottom="16dp"
            android:layout_columnWeight="1" />
    </GridLayout>
    <Button
        android:id="@+id/execute_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Execute"
        android:backgroundTint="@color/gray"
        android:enabled="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/grid_layout_extra_spinners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>