<!--                android:layout_width="0dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_columnWeight="1"-->
<!--                android:layout_marginBottom="16dp"-->
<!--                android:spinnerMode="dropdown" />-->

<!--            &lt;!&ndash; Select Validation Template &ndash;&gt;-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="8dp"-->
<!--                android:text="Select Validation Template" />-->

<!--            <Spinner-->
<!--                android:id="@+id/spinner_validation_template"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_columnWeight="1"-->
<!--                android:layout_marginBottom="16dp"-->
<!--                android:spinnerMode="dropdown" />-->

            <!-- Column 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Select UE Profile" />

            <Spinner
                android:id="@+id/spinner_ue_profile"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown" />

            <!-- Use Case -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Use Case" />

            <Button
                android:id="@+id/spinner_use_case"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:text="Select Use Case" />

<!--            &lt;!&ndash; Exclude Tags &ndash;&gt;-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
